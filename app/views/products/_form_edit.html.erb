<%= render "layouts/errors", :object => @product %>


<%= simple_form_for @product, url: product_path do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :description %>
  <%= f.text_field :description %>
  <%= f.label :price %>
  <%= f.text_field :price %>
  <%= f.input :image, as: :file %>
  <%= f.submit "Add", class: "btn black" %>
<% end %>
